# -*- makefile -*-

if HAVE_NETLINK
AM_CPPFLAGS = -DHAVE_NETLINK=1	
endif

COMMON_FLAGS = -DVERSION=\"$(VERSION)\"
if NDEBUG
COMMON_FLAGS += -DNDEBUG -fomit-frame-pointer
endif

AM_CFLAGS = $(COMMON_FLAGS)
AM_CFLAGS += -Wstrict-prototypes -I $(top_srcdir)/include

if !NDEBUG
AM_LDFLAGS = -export-dynamic
endif
